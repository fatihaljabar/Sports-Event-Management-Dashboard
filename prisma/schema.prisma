generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SportEvent {
  id               String   @id @default(uuid())
  eventId          String   @unique
  name             String
  type             String
  status           String   @default("upcoming")
  locationCity     String
  locationVenue    String?
  locationTimezone String
  coordinates      Json?
  startDate        DateTime
  endDate          DateTime
  maxParticipants  Int
  usedKeys         Int      @default(0)
  totalKeys        Int
  visibility       String   @default("public")
  sports           Json
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  logoUrl          String?
  sponsorLogos     Json?    // Array of { name, url } objects

  @@map("sport_events")
}

enum EventType {
  SINGLE
  MULTI
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
}

enum KeyStatus {
  AVAILABLE
  CLAIMED
  ACTIVE
  REVOKED
}

model AccessKey {
  id          String    @id @default(uuid())
  code        String    @unique
  eventId     String
  sportId     String
  sportName   String
  sportEmoji  String
  status      KeyStatus @default(AVAILABLE)
  claimedById String?   // UUID of user who claimed this key
  claimedAt   DateTime?
  createdAt   DateTime  @default(now())

  @@map("access_keys")
}
